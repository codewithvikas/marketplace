<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/marketplace_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.patna.marketplace.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_homeFragment_to_factCategory"
            app:destination="@id/factCategoryFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/factCategoryFragment"
        android:name="com.patna.marketplace.FactCategoryFragment"
        android:label="@string/category"
        tools:layout="@layout/fragment_fact_category">
        <action
            android:id="@+id/action_factCategory_to_factsFragment"
            app:destination="@id/factsFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:popUpTo="@id/factCategoryFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/factsFragment"
        android:name="com.patna.marketplace.FactsFragment"
        android:label="{categoryType}"
        tools:layout="@layout/fragment_facts">
        <action
            android:id="@+id/action_factsFragment_to_factCategoryFragment"
            app:destination="@id/factCategoryFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false" />
        <argument
            android:name="categoryType"
            app:argType="com.patna.marketplace.model.FactCategory" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.patna.marketplace.AboutFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/rulesFragment"
        android:name="com.patna.marketplace.RulesFragment"
        android:label="fragment_rules"
        tools:layout="@layout/fragment_rules" />

</navigation>